<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_10dp"
    android:clickable="true"
    android:orientation="vertical"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp"
            android:background="@drawable/popup_whitelight_rounded"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_200dp">

                <ImageView
                    android:id="@+id/imgImageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_200dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/launcher_iconapp" />

                <ImageView
                    android:id="@+id/editImageView"
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="@dimen/size_40dp"
                    android:background="@drawable/circle_gray"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/size_15dp"
                    app:tint="@color/white"
                    android:layout_margin="@dimen/size_10dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:src="@drawable/edit"
                    tools:targetApi="lollipop" />

              <!--  <ImageView
                    android:id="@+id/editImageView"
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="@dimen/size_30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/size_10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/edit"
                    app:tint="@color/colorPrimary" />-->

            </RelativeLayout>

            <EditText
                android:id="@+id/catNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_10dp"
                android:background="@drawable/line_spinner"
                android:fontFamily="@font/montserrat"
                android:hint="Enter category name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="@dimen/size_10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/midGray"
                android:textSize="@dimen/font_size14" />

            <EditText
                android:id="@+id/descEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_10dp"
                android:background="@drawable/bggray_borderlight"
                android:fontFamily="@font/montserrat"
                android:gravity="top"
                android:hint="Enter category description"
                android:lines="5"
                android:padding="@dimen/size_10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/midGray"
                android:textSize="@dimen/font_size14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cancelTextView"
                        style="@style/wrapWrap"
                        android:layout_margin="@dimen/size_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bggray_border"
                        android:backgroundTint="@color/midGray"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="  CANCEL  "
                        android:textColor="@color/white"
                        tools:targetApi="lollipop" />


                    <TextView
                        android:id="@+id/doneTextView"
                        style="@style/wrapWrap"
                        android:layout_margin="@dimen/size_5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_back"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="   Done   "
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>