<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/size_5dp">

        <LinearLayout
            android:id="@+id/dashBoardLinearLayout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dashboardImageView"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:src="@drawable/home"
                app:tint="@color/colorPrimary" />

            <Button
                android:id="@+id/dashBoardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat"
                android:inputType="textCapWords"
                android:paddingTop="4dp"
                android:text="Dashboard"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_10dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/orderLinearLayout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/orderImageView"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/diet"
                app:tint="@color/darkGray" />

            <Button
                android:id="@+id/orderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderImageView"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat"
                android:inputType="textCapWords"
                android:paddingTop="4dp"
                android:text="Orders"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/size_10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deliveriesLinearLayout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/deliveriesImageView"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:src="@drawable/ic_wallet"
                app:tint="@color/darkGray" />

            <Button
                android:id="@+id/deliveriesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat"
                android:inputType="textCapWords"
                android:paddingTop="4dp"
                android:text="Wallet"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/size_10dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/profileLinearLayout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/alertsImageView"
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/user"
                app:tint="@color/darkGray" />

            <Button
                android:id="@+id/alertButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat"
                android:inputType="textCapWords"
                android:paddingTop="4dp"
                android:text="Profile"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/size_10dp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>



