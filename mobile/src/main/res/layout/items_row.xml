<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linearHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/avatarImageView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_160dp"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/avatar" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/imgCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/size_10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_160dp">

                            <ImageView
                                android:id="@+id/imgImageView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_160dp"
                                android:scaleType="fitXY" />


                            <ImageView
                                android:id="@+id/blurrImageView"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_160dp"
                                android:background="@color/veryVerylightgray"
                                android:scaleType="fitXY"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


                <ImageView
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_margin="@dimen/size_10dp"
                    android:background="@drawable/greendot"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/isAddedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/size_5dp"
                    android:background="@drawable/bggray_border"
                    android:padding="@dimen/size_5dp"
                    android:text="Added"
                    android:textColor="@color/fontGreen"
                    android:textSize="@dimen/font_size11"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start|top"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_5dp">

                        <TextView
                            android:id="@+id/titleTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/descTextView"
                            android:padding="@dimen/size_1dp"
                            android:text="ABC"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size12"
                            android:textStyle="normal"
                            app:fontFamily="@font/roboto" />


                        <TextView
                            android:id="@+id/descTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/size_5dp"
                            android:padding="@dimen/size_1dp"
                            android:text="ABC"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size12"
                            android:textStyle="normal"
                            app:fontFamily="@font/roboto" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_5dp"
                        android:visibility="gone">

                        <!--    <TextView
                                android:id="@+id/descTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:maxLength="21"
                                android:paddingLeft="@dimen/size_1dp"
                                android:paddingRight="@dimen/size_5dp"
                                android:paddingBottom="@dimen/size_2dp"
                                android:text="Xyz"
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size10"
                                app:fontFamily="@font/roboto" />-->

                        <TextView
                            android:id="@+id/totalTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/size_5dp"
                            android:padding="@dimen/size_1dp"
                            android:text="Total 00"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size10"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:fontFamily="@font/montserrat" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/size_6dp"
                        android:paddingRight="@dimen/size_6dp"
                        android:paddingBottom="@dimen/size_6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/size_5dp"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/size_10dp"
                                    android:paddingTop="@dimen/size_3dp"
                                    android:paddingEnd="@dimen/size_15dp"
                                    android:paddingBottom="@dimen/size_3dp"
                                    android:text="Size  "
                                    android:textColor="@color/darkGray"
                                    android:textSize="@dimen/font_size10"
                                    app:fontFamily="@font/roboto" />

                                <Spinner
                                    android:id="@+id/sizeSpinner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bggray_border"
                                    android:overlapAnchor="false"
                                    android:paddingLeft="@dimen/size_10dp"
                                    android:paddingRight="@dimen/size_10dp" />


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="@dimen/size_5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/costTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/size_5dp"
                                        android:padding="@dimen/size_1dp"
                                        android:text="00"
                                        android:textColor="@color/darkGray"
                                        android:textSize="@dimen/font_size12"
                                        android:textStyle="bold"
                                        app:fontFamily="@font/roboto" />

                                    <TextView
                                        android:id="@+id/salePriceTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/size_5dp"
                                        android:padding="@dimen/size_1dp"
                                        android:text="00"
                                        android:textColor="@color/dangerRed"
                                        android:textSize="@dimen/font_size12"
                                        android:textStyle="bold"
                                        android:visibility="visible"
                                        app:fontFamily="@font/roboto" />
                                </LinearLayout>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/layoutAdd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/size_5dp"
                                    android:background="@drawable/bggray_borderlight"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/size_10dp"
                                    android:paddingTop="@dimen/size_3dp"
                                    android:paddingRight="@dimen/size_10dp"
                                    android:paddingBottom="@dimen/size_3dp">

                                    <TextView
                                        android:id="@+id/addCartTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="ADD"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_size15"
                                        app:fontFamily="@font/roboto" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" +"
                                        android:textColor="@color/dangerRed"
                                        android:textSize="@dimen/font_size15"
                                        app:fontFamily="@font/roboto" />

                                </LinearLayout>

                              <!--  <ImageView
                                    android:id="@+id/ivRight"
                                    android:layout_width="@dimen/size_20dp"
                                    android:layout_height="@dimen/size_20dp"
                                    android:layout_centerInParent="true"
                                    android:visibility="gone"
                                    app:srcCompat="@drawable/ic_network_right" />-->

                                <RelativeLayout
                                    android:id="@+id/layoutAddMore"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/size_5dp"
                                    android:background="@drawable/bggray_borderlight"
                                    android:gravity="center"
                                    android:visibility="gone"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/size_10dp"
                                    android:paddingTop="@dimen/size_3dp"
                                    android:paddingRight="@dimen/size_10dp"
                                    android:paddingBottom="@dimen/size_3dp">

                                    <TextView
                                        android:id="@+id/minusTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="@dimen/size_20dp"
                                        android:paddingRight="@dimen/size_20dp"
                                        android:text="-"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_size15"
                                        app:fontFamily="@font/roboto" />


                                    <TextView
                                        android:id="@+id/qtyTextView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_toStartOf="@+id/plusTextView"
                                        android:layout_toEndOf="@+id/minusTextView"
                                        android:paddingLeft="@dimen/size_10dp"
                                        android:paddingRight="@dimen/size_10dp"
                                        android:text="1"
                                        android:background="@color/verylightgray"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_size15"
                                        app:fontFamily="@font/roboto" />

                                    <TextView
                                        android:id="@+id/plusTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:paddingLeft="@dimen/size_20dp"
                                        android:paddingRight="@dimen/size_20dp"
                                        android:text="+"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_size15"
                                        app:fontFamily="@font/roboto" />

                                </RelativeLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/outStockLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_25dp"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ban"
                android:visibility="visible"
                app:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/size_10dp"
                android:text="OUT OF STOCK"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size12"
                android:textStyle="normal" />

        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>