<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/mainLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_6dp"
        android:background="@drawable/bubble"
        android:gravity="right"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/size_5dp">

            <ImageView
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_margin="@dimen/size_5dp"
                android:src="@drawable/launcher_iconapp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingTop="@dimen/size_6dp"
                android:paddingRight="@dimen/size_10dp"
                android:paddingBottom="@dimen/size_6dp"
                android:text="some title desc about app title"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size14"
                android:textStyle="normal"
                app:fontFamily="@font/roboto" />

        </LinearLayout>

        <TextView
            android:id="@+id/msgTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_6dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_8dp"
            android:text="some title desc about app title"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/font_size14"
            android:textStyle="normal"
            app:fontFamily="@font/roboto" />

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_120dp"
            android:layout_margin="@dimen/size_5dp"
            android:scaleType="centerInside"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>