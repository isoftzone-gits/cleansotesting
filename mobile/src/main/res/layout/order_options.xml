<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/verylightgray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_5dp"
                        android:text="Line : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size13" />

                    <TextView
                        android:id="@+id/lineTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_5dp"
                        android:text="6 : "
                        android:textColor="@color/darkGray"
                        android:textSize="@dimen/font_size13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_5dp"
                        android:text="  Part : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size13" />

                    <TextView
                        android:id="@+id/partTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_5dp"
                        android:text="123456"
                        android:textColor="@color/darkGray"
                        android:textSize="@dimen/font_size13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_5dp"
                        android:text="Est.List : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size13" />

                    <TextView
                        android:id="@+id/estListTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_5dp"
                        android:text="6  "
                        android:textColor="@color/darkGray"
                        android:textSize="@dimen/font_size13" />


                </LinearLayout>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/partCellLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightBlue"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/checkBoxImageView"
                                android:layout_width="@dimen/size_25dp"
                                android:layout_height="@dimen/size_25dp"
                                android:padding="@dimen/size_5dp"
                                android:src="@drawable/usercolor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="  Part : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/partNumRowTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="123456 "
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size13" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/descTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_5dp"
                            android:text="Desc  "
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/font_size13" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="Part Type : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/partTypeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="Type "
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="    Cost : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/costTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="Cost "
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size13" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="GP% : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/gpPercentTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="GP "
                                android:textColor="@color/fontGreen"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="   Business Rule : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/businessRuleTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/darkBlue"
                                android:paddingLeft="@dimen/size_5dp"
                                android:paddingTop="@dimen/size_3dp"
                                android:paddingRight="@dimen/size_5dp"
                                android:paddingBottom="@dimen/size_3dp"
                                android:text="Valid"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_size11" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="ETA : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/etaDateTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="ETA "
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size13" />


                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_5dp"
                        android:text="PART SUMMARY "
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size13" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1dp"
                        android:background="@color/verylightgray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="OEM PART# : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/oemPartTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="OEM part "
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text=" Part Estimate List Price : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/estimateTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="Estimate "
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size13" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="Vendor : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/vendorTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="vendor"
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text=" Part Sale Price : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/partSalePriceTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="SalePrice "
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size13" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="Part # : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/partSummaryNumTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="PartNum"
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text=" Gross Profit% : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/grossProfitPercentTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="GP "
                                android:textColor="@color/fontGreen"
                                android:textSize="@dimen/font_size13" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="Part Linecode : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/partLineCodeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="code"
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text=" Part Certification Type : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/partCertificationTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="Certifi "
                                android:textColor="@color/fontGreen"
                                android:textSize="@dimen/font_size13" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="Part Description : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/descSummaryTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="code"
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text=" Part Status : "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/partStatusTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="Status "
                                android:textColor="@color/fontGreen"
                                android:textSize="@dimen/font_size13" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="Part Notes : - "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size13" />

                            <TextView
                                android:id="@+id/notesTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_5dp"
                                android:text="notes"
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/font_size13" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/size_5dp"
                            android:text="PART IMAGE "
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size13" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>

</layout>