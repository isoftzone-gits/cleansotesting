<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_5dp"
    app:cardElevation="@dimen/size_5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/size_5dp">


        <LinearLayout
            android:id="@+id/headerLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:padding="@dimen/size_3dp"
                android:text="Delivery At"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/font_size12" />

            <TextView
                android:id="@+id/cancelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="@dimen/size_6dp"
                android:text="Cancel"
                android:textAllCaps="true"
                android:textColor="@color/dangerRed"
                android:textSize="@dimen/font_size13"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/arrowImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_arrow_down"
                android:rotation="-90" />

        </LinearLayout>

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:padding="@dimen/size_3dp"
            android:text="Palasia , Apollo Tower 554"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size13" />

        <LinearLayout
            android:id="@+id/statusLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/placedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="@dimen/size_3dp"
                android:text="Placed"
                android:textColor="@color/fontGreen"
                android:textSize="@dimen/font_size12" />


            <ImageView
                android:id="@+id/firstImageView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_3dp"
                android:layout_marginTop="@dimen/size_1dp"
                android:layout_weight="1"
                android:background="@drawable/greenbg" />

            <TextView
                android:id="@+id/progressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="left"
                android:padding="@dimen/size_3dp"
                android:text="Progress"
                android:textColor="@color/midGray"
                android:textSize="@dimen/font_size12" />

            <ImageView
                android:id="@+id/secondImageView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_3dp"
                android:layout_marginTop="@dimen/size_1dp"
                android:layout_weight="1"
                android:background="@drawable/graybg" />

            <TextView
                android:id="@+id/dispatchedextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="left"
                android:padding="@dimen/size_3dp"
                android:text="Dispatched "
                android:textColor="@color/midGray"
                android:textSize="@dimen/font_size12" />

            <ImageView
                android:id="@+id/thirdImageView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_3dp"
                android:layout_marginTop="@dimen/size_1dp"
                android:layout_weight="1"
                android:background="@drawable/graybg" />

            <TextView
                android:id="@+id/deliveredTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="right"
                android:padding="@dimen/size_3dp"
                android:text="Delivered"
                android:textColor="@color/midGray"
                android:textSize="@dimen/font_size12" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:background="@color/verylightgray" />


        <TextView
            android:id="@+id/itemsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:padding="@dimen/size_5dp"
            android:text="Items"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size13" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itemsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/verylightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:padding="@dimen/size_6dp"
                android:text="Status"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size12" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="@dimen/size_6dp"
                android:text="date"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size12" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>