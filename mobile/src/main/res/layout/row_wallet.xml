<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_8dp"
    android:background="@drawable/background_shape_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:visibility="gone" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/size_6dp"
                android:text="You get the amount to "
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size12"
                android:textStyle="normal"
                app:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/amtTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:text="0 rs"
                android:textColor="@color/fontGreen"
                android:textSize="@dimen/font_size12"
                android:textStyle="normal"
                app:fontFamily="@font/montserrat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/toTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/size_6dp"
                android:text="Work isoftzone "
                android:textColor="@color/darkGray"
                android:textSize="@dimen/font_size12"
                android:textStyle="normal"
                app:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/expiredOnTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_6dp"
                android:text="0000:00:00"
                android:textColor="@color/fontGreen"
                android:textSize="@dimen/font_size12"
                android:textStyle="normal"
                app:fontFamily="@font/roboto" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>